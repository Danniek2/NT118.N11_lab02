<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tiny_padding">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_basex2"
        android:scaleType="centerCrop"
        android:src="@drawable/first_thumbnail"
        android:id="@+id/iv_thumbnail"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_base"
        android:background="@drawable/bg_black_mask"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="@dimen/margin_base"
            android:text="Name"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/tv_name"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/margin_base" />

        <ImageView
            android:layout_width="@dimen/margin_basex4"
            android:layout_height="@dimen/margin_basex4"
            android:scaleType="fitCenter"
            android:id="@+id/iv_promotion"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_promotion"
            android:layout_marginRight="@dimen/margin_base"/>

    </LinearLayout>

</FrameLayout>
